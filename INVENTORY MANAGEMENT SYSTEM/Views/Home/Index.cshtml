@{
    ViewData["Title"] = "Home Page";
}

<div class="Container">
    <div class="row justify-content-center">
        <div class="col-md-5 p-4 account-cont bg-light">
            <div class="row justify-content-center">
                <div class="col-md-12 account-logo">
                    <img src="~/assets/img/BV-Logo.png" />
                </div>
                <div class="col-md-12 mb-3">
					<div class="row">
						<div class="col-md-12 mb-3">
							<label >Email</label>
							<input type="email" class="form-control" id="Email"  required>
						</div>
					</div>
					<div class="row">
						<div class="col-md-12 mb-5">
							<label >Password</label>
							<input type="password" class="form-control" id="Passwrd" required>
						</div>
					</div>
					<div class="form-group text-center">
						<button class="btn btn-primary account-btn" onclick="loginPost()" type="submit">Login</button>
					</div>
				</div>
            </div>
        </div>
    </div>
</div>
